<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
	<UseWPF>true</UseWPF>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <!-- Windows x64向けのみに絞り込む -->
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <SelfContained>false</SelfContained>
    <!-- 日本語と英語のみを含める（他の言語リソースを除外） -->
    <SatelliteResourceLanguages>ja;en</SatelliteResourceLanguages>
    <!-- 単一ファイル発行を有効化 -->
    <PublishSingleFile>true</PublishSingleFile>
    <!-- ネイティブDLLやassetsは単一ファイルに含めない（互換性のため） -->
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
    <IncludeAllContentForSelfExtract>false</IncludeAllContentForSelfExtract>
  </PropertyGroup>

  <!-- テストプロジェクトに internal メンバーを公開 -->
  <ItemGroup>
    <InternalsVisibleTo Include="DesktopAiMascotTest" />
  </ItemGroup>
  
  <!-- トリミングから除外するアセンブリ（リフレクション使用など） -->
  <ItemGroup>
    <TrimmerRootAssembly Include="System.Windows.Forms" />
    <TrimmerRootAssembly Include="PresentationFramework" />
    <TrimmerRootAssembly Include="WindowsBase" />
    <TrimmerRootAssembly Include="YamlDotNet" />
  </ItemGroup>

  <!-- 不要なランタイムアセットを除外 -->
  <ItemGroup>
    <RuntimeHostConfigurationOption Include="System.Globalization.Invariant" Value="false" />
  </ItemGroup>
  
  <!-- Linux、macOS、その他のプラットフォームのネイティブライブラリを除外 -->
  <Target Name="RemoveUnusedRuntimes" AfterTargets="ResolveAssemblyReferences">
    <ItemGroup>
      <RuntimeCopyLocalItems Remove="@(RuntimeCopyLocalItems)" Condition="$([System.String]::Copy('%(RuntimeCopyLocalItems.DestinationSubDirectory)').Contains('linux')) Or&#xD;&#xA;                   $([System.String]::Copy('%(RuntimeCopyLocalItems.DestinationSubDirectory)').Contains('osx')) Or&#xD;&#xA;                   $([System.String]::Copy('%(RuntimeCopyLocalItems.DestinationSubDirectory)').Contains('unix')) Or&#xD;&#xA;                   $([System.String]::Copy('%(RuntimeCopyLocalItems.DestinationSubDirectory)').Contains('win-arm')) Or&#xD;&#xA;                   $([System.String]::Copy('%(RuntimeCopyLocalItems.DestinationSubDirectory)').Contains('win-x86'))" />
    </ItemGroup>
  </Target>
  
  <!-- 不要なファイルを除外（Publish後） -->
  <Target Name="RemoveUnusedFiles" AfterTargets="Publish">
    <ItemGroup>
      <!-- デバッグ用のPDBファイルを削除 -->
      <FilesToDelete Include="$(PublishDir)**\*.pdb" />
      <!-- XMLドキュメントファイルを削除 -->
      <FilesToDelete Include="$(PublishDir)**\*.xml" />
    </ItemGroup>
    <Delete Files="@(FilesToDelete)" />
    <Message Text="不要なファイルを削除しました" Importance="high" />
  </Target>


  <ItemGroup>
    <Reference Include="WindowsFormsIntegration" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Google.GenAI" Version="0.14.0" />
    <PackageReference Include="Google.Protobuf" Version="3.34.0-rc1" />
    <PackageReference Include="Magick.NET-Q16-AnyCPU" Version="14.10.2" />
    <PackageReference Include="Microsoft.Extensions.AI" Version="10.2.0" />
    <PackageReference Include="Microsoft.Extensions.AI.OpenAI" Version="10.1.1-preview.1.25612.2" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
    <PackageReference Include="OpenAI" Version="2.8.0" />
    <PackageReference Include="YamlDotNet" Version="16.3.0" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="assets\**\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="新しいフォルダー\**" />
    <EmbeddedResource Remove="新しいフォルダー\**" />
    <None Remove="新しいフォルダー\**" />
    <Compile Remove="DesktopAiMascotTest\**" />
    <EmbeddedResource Remove="DesktopAiMascotTest\**" />
    <None Remove="DesktopAiMascotTest\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\DataSources\" />
  </ItemGroup>

  <ItemGroup>
    <None Include=".github\workflows\build.yml" />
    <None Include=".github\copilot-instructions.md" />
  </ItemGroup>

</Project>
