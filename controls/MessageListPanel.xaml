<UserControl x:Class="DesktopAiMascot.controls.MessageListPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopAiMascot.controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    <Grid ClipToBounds="True">
        <ListBox x:Name="chatMessageListBox"
                 Background="Transparent"
                 BorderThickness="0"
                 Padding="0,0,0,0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.CanContentScroll="False"
                 SelectionMode="Extended"
                 MouseDoubleClick="ListBox_MouseDoubleClick">
            <ListBox.ContextMenu>
                <ContextMenu x:Name="messagesContextMenu">
                    <MenuItem Header="Copy" Click="CopyMenuItem_Click"/>
                </ContextMenu>
            </ListBox.ContextMenu>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border Background="{TemplateBinding Background}"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,2">
                        <!-- アシスタントメッセージ（左寄せ） -->
                        <DockPanel HorizontalAlignment="Left"
                                   Margin="4,2"
                                   MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ListBox}}">
                            <DockPanel.Style>
                                <Style TargetType="DockPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Sender}" Value="Assistant">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DockPanel.Style>
                            
                            <!-- 再生ボタン -->
                            <Button x:Name="PlayButton"
                                    DockPanel.Dock="Right"
                                    Width="20"
                                    Height="20"
                                    Margin="4,0,0,0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="PlayButton_Click"
                                    Tag="{Binding}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <Image Source="/assets/icons/PlayButton_x2.png"
                                                   Stretch="Uniform"
                                                   Width="20"
                                                   Height="20"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                            <Border Background="#E6FFFFFF"
                                    CornerRadius="12"
                                    Padding="12,12"
                                    BorderBrush="#78000000"
                                    BorderThickness="1">
                                <TextBlock Text="{Binding Text}"
                                           TextWrapping="Wrap"
                                           Foreground="Black"/>
                            </Border>
                        </DockPanel>
                        
                        <!-- ユーザーメッセージ（右寄せ） -->
                        <DockPanel HorizontalAlignment="Right"
                                   Margin="4,2"
                                   MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ListBox}}">
                            <DockPanel.Style>
                                <Style TargetType="DockPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Sender}" Value="User">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DockPanel.Style>
                            
                            <Border Background="#DC0096FF"
                                    CornerRadius="12"
                                    Padding="12,12"
                                    BorderBrush="#78000000"
                                    BorderThickness="1">
                                <TextBlock Text="{Binding Text}"
                                           TextWrapping="Wrap"
                                           Foreground="White"/>
                            </Border>
                        </DockPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
