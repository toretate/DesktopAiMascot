<UserControl x:Class="DesktopAiMascot.controls.MessageListPanel"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
xmlns:local="clr-namespace:DesktopAiMascot.controls"
mc:Ignorable="d" 
d:DesignHeight="450" d:DesignWidth="800"
>
    <Grid ClipToBounds="True">
        <ListBox x:Name="chatMessageListBox"
                 Background="Transparent"
                 BorderThickness="0"
                 Padding="0,0,0,0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.CanContentScroll="False"
                 SelectionMode="Extended"
                 MouseDoubleClick="ListBox_MouseDoubleClick">
            <ListBox.ContextMenu>
                <ContextMenu x:Name="messagesContextMenu">
                    <MenuItem Header="Copy" Click="CopyMenuItem_Click"/>
                </ContextMenu>
            </ListBox.ContextMenu>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border Background="{TemplateBinding Background}"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,2">
                        <!-- アシスタントメッセージ（左寄せ） -->
                        <DockPanel HorizontalAlignment="Left"
                                   Margin="4,2"
                                   MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ListBox}}">
                            <DockPanel.Style>
                                <Style TargetType="DockPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Sender}" Value="Assistant">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DockPanel.Style>
                            
                            <!-- 再生/停止ボタン -->
                            <Button x:Name="PlayButton"
                                    DockPanel.Dock="Right"
                                    Width="20"
                                    Height="20"
                                    Margin="4,0,0,0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="PlayButton_Click"
                                    Tag="{Binding}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <Image x:Name="ButtonImage"
                                                   Source="/assets/icons/PlayButton_x2.png"
                                                   Stretch="Uniform"
                                                   Width="20"
                                                   Height="20"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                            <!-- 再作成ボタン -->
                            <Button x:Name="RegenerateButton"
                                    DockPanel.Dock="Right"
                                    Width="20"
                                    Height="20"
                                    Margin="4,0,0,0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="RegenerateButton_Click"
                                    Tag="{Binding}"
                                    ToolTip="再作成">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="RegenerateBorder"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <Path Data="M12 4V1L8 5l4 4V6c3.31 0 6 2.69 6 6 0 1.01-.25 1.97-.7 2.8l1.46 1.46C19.54 15.03 20 13.57 20 12c0-4.42-3.58-8-8-8zm0 14c-3.31 0-6-2.69-6-6 0-1.01.25-1.97.7-2.8L5.24 7.74C4.46 8.97 4 10.43 4 12c0 4.42 3.58 8 8 8v3l4-4-4-4v3z"
                                                  Fill="#666666"
                                                  Stretch="Uniform"
                                                  Width="16"
                                                  Height="16"
                                                  Margin="2"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="RegenerateBorder" Property="Background" Value="#20000000"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                            <Border Background="#E6FFFFFF"
                                    CornerRadius="12"
                                    Padding="12,12"
                                    BorderBrush="#78000000"
                                    BorderThickness="1">
                                <TextBlock Text="{Binding Text}"
                                           TextWrapping="Wrap"
                                           Foreground="Black"/>
                            </Border>
                        </DockPanel>
                        
                        <!-- ユーザーメッセージ（右寄せ） -->
                        <DockPanel HorizontalAlignment="Right"
                                   Margin="4,2"
                                   MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ListBox}}">
                            <DockPanel.Style>
                                <Style TargetType="DockPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Sender}" Value="User">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DockPanel.Style>
                            
                            <Border Background="#DC0096FF"
                                    CornerRadius="12"
                                    Padding="12,12"
                                    BorderBrush="#78000000"
                                    BorderThickness="1">
                                <TextBlock Text="{Binding Text}"
                                           TextWrapping="Wrap"
                                           Foreground="White"/>
                            </Border>
                        </DockPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
