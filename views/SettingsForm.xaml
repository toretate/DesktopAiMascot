<UserControl x:Class="DesktopAiMascot.views.SettingsForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopAiMascot.views"
             mc:Ignorable="d" 
             d:DesignHeight="552" d:DesignWidth="580"
             Background="White"
             KeyDown="UserControl_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Panel with Title -->
        <Grid Grid.Row="0" Height="30" Background="Transparent">
            <TextBlock Text="Settings" 
                       FontSize="16" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>
        </Grid>

        <!-- Content Panel -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Side Category List Panel -->
            <ListBox x:Name="categorySelectionList"
                     Grid.Column="0"
                     FontSize="13"
                     SelectionChanged="CategorySelectionList_SelectionChanged"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <ListBoxItem Content="Mascot"/>
                <ListBoxItem Content="Chat AI"/>
                <ListBoxItem Content="Voice AI"/>
                <ListBoxItem Content="Image AI"/>
                <ListBoxItem Content="Movie AI"/>
                <ListBoxItem Content="API Keys"/>
            </ListBox>

            <!-- Property Pages Container -->
            <ScrollViewer Grid.Column="1" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <Grid x:Name="propertyPagesContainer">
                </Grid>
            </ScrollViewer>
        </Grid>

        <!-- Close Button -->
        <Button Grid.Row="2"
                x:Name="closeButton"
                Content="Close"
                Height="30"
                Click="CloseButton_Click"/>
    </Grid>
</UserControl>



