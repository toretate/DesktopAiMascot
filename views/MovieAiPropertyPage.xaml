<UserControl x:Class="DesktopAiMascot.views.MovieAiPropertyPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopAiMascot.views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="480">
    <GroupBox Header="Movie AI" Padding="10">
        <StackPanel>
            <ComboBox x:Name="movieAiComboBox" 
                      Height="25"
                      Margin="0,0,0,10"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Name"
                      SelectionChanged="MovieAiComboBox_SelectionChanged"/>

            <Label Content="URL" FontSize="11" Padding="0" Margin="0,0,0,2"/>
            <TextBox x:Name="movieAiUrlTextField" 
                     Height="25"
                     Margin="0,0,0,10"/>

            <Label Content="Checkpoint" FontSize="11" Padding="0" Margin="0,0,0,2"/>
            <ComboBox x:Name="movieAiModelComboBox" 
                      Height="25"/>
        </StackPanel>
    </GroupBox>
</UserControl>
