<Window x:Class="DesktopAiMascot.views.MascotEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopAiMascot.views"
        xmlns:mascotEdit="clr-namespace:DesktopAiMascot.views.MascotEdit"
        mc:Ignorable="d"
        Title="マスコット編集" Height="900" Width="900"
        Background="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="454"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー：カバー画像と基本情報 -->
        <GroupBox Header="基本情報" Grid.Row="0" Padding="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- キャラクター画像一覧 -->
                <Grid Grid.Column="0" Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- カバー画像表示 -->
                    <GroupBox Grid.Row="0" Width="180" Height="180" Margin="0,0,0,5">
                        <GroupBox.Header>
                            <Grid>
                                <TextBlock Text="Cover" VerticalAlignment="Center"/>
                            </Grid>
                        </GroupBox.Header>
                        <Image x:Name="coverImage" 
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               RenderOptions.EdgeMode="Aliased"/>

                    </GroupBox>

                    <!-- キャラクター画像一覧 -->
                    <ListView Grid.Row="1" 
                        x:Name="mascotImageListView"
                        SelectionMode="Single"
                        SelectionChanged="ImageListView_SelectionChanged" 
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        HorizontalContentAlignment="Center" 
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Visible"
                        ScrollViewer.CanContentScroll="True">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="itemBorder"
                                    BorderBrush="LightGray" 
                                    BorderThickness="1" 
                                    Margin="0,0,0,5" 
                                    Padding="5"
                                    Width="160"
                                    Height="160"
                                    HorizontalAlignment="Center">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="120"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Image Grid.Row="0"
                                            Source="{Binding Image.ImageSource}" 
                                            Stretch="Uniform"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            RenderOptions.BitmapScalingMode="HighQuality"
                                            RenderOptions.EdgeMode="Aliased"/>

                                        <TextBlock Grid.Row="1"
                                            Text="{Binding Name}" 
                                            TextAlignment="Center"
                                            TextWrapping="Wrap"
                                            FontSize="10"
                                            Margin="0,5,0,0"/>
                                    </Grid>
                                </Border>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}}" Value="True">
                                        <Setter TargetName="itemBorder" Property="BorderBrush" Value="DodgerBlue"/>
                                        <Setter TargetName="itemBorder" Property="BorderThickness" Value="3"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>

                <!-- 基本設定 -->
                <mascotEdit:MascotEditSettingControl 
                    x:Name="mascotEditSettingControl" 
                    Grid.Column="1" 
                    Margin="5,0,0,0"/>

            </Grid>
        </GroupBox>

        <!-- フッター：アクションボタン -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Width="210">
            <Button x:Name="saveButton" 
                    Content="保存" 
                    Width="100" 
                    Height="35"
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"/>
            <Button x:Name="cancelButton" 
                    Content="キャンセル" 
                    Width="100" 
                    Height="35"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
