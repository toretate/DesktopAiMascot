<Window x:Class="DesktopAiMascot.views.MascotEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopAiMascot.views"
        mc:Ignorable="d"
        Title="マスコット編集" Height="900" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="790" MinHeight="454"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー：カバー画像と基本情報 -->
        <GroupBox Header="基本情報" Grid.Row="0" Padding="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- カバー画像 -->
                <StackPanel Grid.Column="0" Margin="0">
                    <!-- カバー画像表示 -->
                    <GroupBox Width="180" Height="180" Margin="0,0,0,5">
                        <GroupBox.Header>
                            <Grid>
                                <TextBlock Text="Cover" VerticalAlignment="Center"/>
                            </Grid>
                        </GroupBox.Header>
                        <Image x:Name="coverImage" 
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               RenderOptions.EdgeMode="Aliased"/>

                    </GroupBox>
                                        
                    <ListView x:Name="mascotImageListView"
                        SelectionMode="Single"
                        SelectionChanged="ImageListView_SelectionChanged" 
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        HorizontalContentAlignment="Center" 
                        Height="581"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        ScrollViewer.CanContentScroll="False">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="itemBorder"
                                    BorderBrush="LightGray" 
                                    BorderThickness="1" 
                                    Margin="0,0,0,5" 
                                    Padding="5"
                                    Width="160"
                                    Height="160"
                                    HorizontalAlignment="Center">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="120"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Image Grid.Row="0"
                                            Source="{Binding ImageSource}" 
                                            Stretch="Uniform"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            RenderOptions.BitmapScalingMode="HighQuality"
                                            RenderOptions.EdgeMode="Aliased"/>

                                        <TextBlock Grid.Row="1"
                                            Text="{Binding FileName}" 
                                            TextAlignment="Center"
                                            TextWrapping="Wrap"
                                            FontSize="10"
                                            Margin="0,5,0,0"/>
                                    </Grid>
                                </Border>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}}" Value="True">
                                        <Setter TargetName="itemBorder" Property="BorderBrush" Value="DodgerBlue"/>
                                        <Setter TargetName="itemBorder" Property="BorderThickness" Value="3"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <!-- 基本設定 -->
                <StackPanel Grid.Column="1" Margin="5,0,0,0">

                    <Label Content="名前" FontWeight="Bold" FontSize="12" Padding="0" />
                    <TextBox x:Name="displayNameTextBox" 
                        Height="30" 
                        FontSize="14"
                        VerticalContentAlignment="Center"/>

                    <Label Content="プロフィールなど" FontWeight="Bold" FontSize="12" Padding="0"/>
                    <Button x:Name="editPromptButton" 
                        Content="外部エディタで編集" 
                        Height="35"
                        Click="EditPromptButton_Click"
                            />

                    <GroupBox x:Name="angleViewGroupBox" Height="360">
                        <GroupBox.Header>
                            <Grid>
                                <TextBlock Text="図" VerticalAlignment="Center"/>
                            </Grid>
                        </GroupBox.Header>

                        <Grid Height="350" VerticalAlignment="Top">
                            <!-- 中央: frontImage -->
                            <Border BorderBrush="DodgerBlue" 
                                    BorderThickness="2" 
                                    HorizontalAlignment="Left" 
                                    Height="100" 
                                    Margin="120,120,0,0" 
                                    VerticalAlignment="Top" 
                                    Width="100">
                                <Image x:Name="frontImage" Stretch="Uniform" Source="/assets/icons/angle_front_sample.png"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       RenderOptions.EdgeMode="Aliased"/>
                            </Border>

                            <!-- 左: leftImage -->
                            <Border BorderBrush="DodgerBlue" 
                                    BorderThickness="2" 
                                    HorizontalAlignment="Left" 
                                    Height="100" 
                                    Margin="10,120,0,0" 
                                    VerticalAlignment="Top" 
                                    Width="100"
                                    Cursor="Hand">
                                <Image x:Name="leftImage" 
                                       Stretch="Uniform" 
                                       MouseLeftButtonDown="LeftImage_Click" Source="/assets/icons/angle_left_sample.png"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       RenderOptions.EdgeMode="Aliased"/>
                            </Border>

                            <!-- 右: rightImage -->
                            <Border BorderBrush="DodgerBlue" 
                                    BorderThickness="2" 
                                    HorizontalAlignment="Left" 
                                    Height="100" 
                                    Margin="230,120,0,0" 
                                    VerticalAlignment="Top" 
                                    Width="96"
                                    Cursor="Hand">
                                <Image x:Name="rightImage" 
                                       Stretch="Uniform" 
                                       MouseLeftButtonDown="RightImage_Click" Source="/assets/icons/angle_right_sample.png"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       RenderOptions.EdgeMode="Aliased"/>
                            </Border>

                            <!-- 上: aboveImage -->
                            <Border BorderBrush="DodgerBlue" 
                                    BorderThickness="2" 
                                    HorizontalAlignment="Left" 
                                    Height="100" 
                                    Margin="120,10,0,0" 
                                    VerticalAlignment="Top" 
                                    Width="100"
                                    Cursor="Hand">
                                <Image x:Name="aboveImage" 
                                       Stretch="Uniform" 
                                       MouseLeftButtonDown="AboveImage_Click" Source="/assets/icons/angle_above_sample.png"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       RenderOptions.EdgeMode="Aliased"/>
                            </Border>

                            <!-- 下: belowImage -->
                            <Border BorderBrush="DodgerBlue" 
                                    BorderThickness="2" 
                                    HorizontalAlignment="Left" 
                                    Height="100" 
                                    Margin="120,230,0,0" 
                                    VerticalAlignment="Top" 
                                    Width="100"
                                    Cursor="Hand">
                                <Image x:Name="belowImage" 
                                       Stretch="Uniform" 
                                       MouseLeftButtonDown="BelowImage_Click" Source="/assets/icons/angle_bottom_sample.png"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       RenderOptions.EdgeMode="Aliased"/>
                            </Border>

                            <!-- 背面: behindImage -->
                            <Border BorderBrush="DodgerBlue" 
                                    BorderThickness="2" 
                                    HorizontalAlignment="Left" 
                                    Height="100" 
                                    Margin="340,120,0,0" 
                                    VerticalAlignment="Top" 
                                    Width="100"
                                    Cursor="Hand">
                                <Image x:Name="behindImage" 
                                       Stretch="Uniform" 
                                       MouseLeftButtonDown="BehindImage_Click" Source="/assets/icons/angle_behind_sample.png"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       RenderOptions.EdgeMode="Aliased"/>
                            </Border>
                            <Label Content="LEFT" HorizontalAlignment="Left" Height="13" Margin="49,224,0,0" VerticalAlignment="Top" Width="22" FontSize="10" Padding="0"/>
                            <Label Content="TOP" HorizontalAlignment="Left" Height="13" Margin="98,56,0,0" VerticalAlignment="Top" Width="22" FontSize="10" Padding="0" RenderTransformOrigin="0.5,0.5">
                                <Label.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="90"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Label.RenderTransform>
                            </Label>
                            <Label Content="RIGHT" HorizontalAlignment="Left" Height="12" Margin="263,225,0,0" VerticalAlignment="Top" Width="30" FontSize="10" Padding="0"/>
                            <Label Content="BEHIND" HorizontalAlignment="Left" Height="12" Margin="372,226,0,0" VerticalAlignment="Top" Width="36" FontSize="10" Padding="0"/>
                            <Label Content="BOTTOM
                                   " HorizontalAlignment="Left" Height="13" Margin="88,276,0,0" VerticalAlignment="Top" Width="42" FontSize="10" Padding="0" RenderTransformOrigin="0.5,0.5">
                                <Label.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="90"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Label.RenderTransform>
                            </Label>

                            <!-- 生成処理AI -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right">
                                <Label>画像生成</Label>
                                <ComboBox x:Name="imageModelComboBox"
                                          Height="20"
                                          Width="180"
                                          Margin="0"
                                          SelectedIndex="0">
                                    <ComboBoxItem Content="Gemini - NanoBanana"/>
                                    <ComboBoxItem Content="Gemini - NanaBanana Pro"/>
                                    <ComboBoxItem Content="Comfy - Qwen3 Image Edit"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    <StackPanel Orientation="Horizontal">
                        <!-- 背景削除ボタン -->
                        <Button x:Name="removeBackgroundButton" 
                            Content="背景を削除" 
                            Width="100" 
                            Height="30"
                            IsEnabled="False"
                            Click="RemoveBackgroundButton_Click"/>
                        
                        <!-- 背景削除処理コンボボックス -->
                        <Label Content="背景削除AI" FontWeight="Bold" FontSize="10" Padding="0,0,0,0" Margin="10,5,0,2"/>
                        <ComboBox x:Name="backgroundRemovalServiceComboBox"
                                  Width="150"
                                  Height="25"
                                  HorizontalAlignment="Left"
                                  DisplayMemberPath="Name"
                                  SelectedIndex="0"/>
                        <Button x:Name="restoreBackgroundButton" 
                            Content="背景削除前に戻す" 
                            Width="130" 
                            Height="30"
                            IsEnabled="False"
                            Click="RestoreBackgroundButton_Click"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="addImageButton" 
                            Content="画像を追加" 
                            Width="100" 
                            Height="30"
                            Margin="0,0,5,0"
                            Click="AddImageButton_Click"/>
                        <Button x:Name="generateEmotesButton" 
                            Content="表情差分作成" 
                            Width="120" 
                            Height="30"
                            IsEnabled="False"
                            Click="GenerateEmotesButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- フッター：アクションボタン -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Width="210">
            <Button x:Name="saveButton" 
                    Content="保存" 
                    Width="100" 
                    Height="35"
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"/>
            <Button x:Name="cancelButton" 
                    Content="キャンセル" 
                    Width="100" 
                    Height="35"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
