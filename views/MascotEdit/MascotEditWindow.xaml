<Window x:Class="DesktopAiMascot.views.MascotEdit.MascotEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopAiMascot.views.MascotEdit"
        mc:Ignorable="d"
        Title="マスコット編集" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー：カバー画像と基本情報 -->
        <GroupBox Header="基本情報" Grid.Row="0" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- カバー画像 -->
                <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" 
                        Width="180" Height="180" Margin="0,0,10,0">
                    <Image x:Name="coverImage" Stretch="Uniform"/>
                </Border>

                <!-- 基本設定 -->
                <StackPanel Grid.Column="1">
                    <Label Content="表示名" FontWeight="Bold" FontSize="12" Padding="0" Margin="0,0,0,5"/>
                    <TextBox x:Name="displayNameTextBox" 
                             Height="30" 
                             FontSize="14"
                             Margin="0,0,0,15"
                             VerticalContentAlignment="Center"/>

                    <Label Content="システムプロンプト" FontWeight="Bold" FontSize="12" Padding="0" Margin="0,0,0,5"/>
                    <Button x:Name="editPromptButton" 
                            Content="外部エディタで編集" 
                            Height="35"
                            Click="EditPromptButton_Click"
                            Margin="0,0,0,15"/>

                    <Label Content="画像生成" FontWeight="Bold" FontSize="12" Padding="0" Margin="0,0,0,5"/>
                    <Button x:Name="generateViewsButton" 
                            Content="キャラクター視点画像を生成" 
                            Height="35"
                            Click="GenerateViewsButton_Click"
                            ToolTip="上下左右背面、左前、右前から見た画像を生成"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 画像一覧 -->
        <GroupBox Header="画像一覧" Grid.Row="1" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ツールバー -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button x:Name="addImageButton" 
                            Content="画像を追加" 
                            Width="100" 
                            Height="30"
                            Margin="0,0,5,0"
                            Click="AddImageButton_Click"/>
                    <Button x:Name="removeBackgroundButton" 
                            Content="背景を削除" 
                            Width="100" 
                            Height="30"
                            Margin="0,0,5,0"
                            IsEnabled="False"
                            Click="RemoveBackgroundButton_Click"/>
                    <Button x:Name="generateEmotesButton" 
                            Content="表情差分作成" 
                            Width="120" 
                            Height="30"
                            IsEnabled="False"
                            Click="GenerateEmotesButton_Click"/>
                </StackPanel>

                <!-- 画像アルバム表示 -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ListView x:Name="imageListView" 
                              SelectionMode="Single"
                              SelectionChanged="ImageListView_SelectionChanged">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" 
                                        BorderThickness="1" 
                                        Margin="5" 
                                        Padding="5"
                                        Width="140" 
                                        Height="160">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="120"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Image Grid.Row="0"
                                               Source="{Binding ImageSource}" 
                                               Stretch="Uniform"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                        
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding FileName}" 
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   FontSize="10"
                                                   Margin="0,5,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </Grid>
        </GroupBox>

        <!-- フッター：アクションボタン -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="saveButton" 
                    Content="保存" 
                    Width="100" 
                    Height="35"
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"/>
            <Button x:Name="cancelButton" 
                    Content="キャンセル" 
                    Width="100" 
                    Height="35"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
