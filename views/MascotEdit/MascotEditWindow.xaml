<Window x:Class="DesktopAiMascot.views.MascotEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopAiMascot.views"
        mc:Ignorable="d"
        Title="マスコット編集" Height="900" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="790" MinHeight="454"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー：カバー画像と基本情報 -->
        <GroupBox Header="基本情報" Grid.Row="0" Padding="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- カバー画像 -->
                <StackPanel Grid.Column="0" Margin="0">
                    <!-- カバー画像表示 -->
                    <GroupBox Width="180" Height="180" Margin="0,0,0,5">
                        <GroupBox.Header>
                            <Grid>
                                <TextBlock Text="Cover" VerticalAlignment="Center"/>
                            </Grid>
                        </GroupBox.Header>
                        <Image x:Name="coverImage" 
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               RenderOptions.EdgeMode="Aliased"/>

                    </GroupBox>
                                        
                    <ListView x:Name="mascotImageListView"
                        SelectionMode="Single"
                        SelectionChanged="ImageListView_SelectionChanged" 
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        HorizontalContentAlignment="Center" 
                        Height="581"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        ScrollViewer.CanContentScroll="False">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="itemBorder"
                                    BorderBrush="LightGray" 
                                    BorderThickness="1" 
                                    Margin="0,0,0,5" 
                                    Padding="5"
                                    Width="160"
                                    Height="160"
                                    HorizontalAlignment="Center">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="120"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Image Grid.Row="0"
                                            Source="{Binding ImageSource}" 
                                            Stretch="Uniform"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            RenderOptions.BitmapScalingMode="HighQuality"
                                            RenderOptions.EdgeMode="Aliased"/>

                                        <TextBlock Grid.Row="1"
                                            Text="{Binding FileName}" 
                                            TextAlignment="Center"
                                            TextWrapping="Wrap"
                                            FontSize="10"
                                            Margin="0,5,0,0"/>
                                    </Grid>
                                </Border>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}}" Value="True">
                                        <Setter TargetName="itemBorder" Property="BorderBrush" Value="DodgerBlue"/>
                                        <Setter TargetName="itemBorder" Property="BorderThickness" Value="3"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <!-- 基本設定 -->
                <StackPanel Grid.Column="1" Margin="5,0,0,0">

                    <Label Content="名前" FontWeight="Bold" FontSize="12" Padding="0" />
                    <TextBox x:Name="displayNameTextBox" 
                        Height="30" 
                        FontSize="14"
                        VerticalContentAlignment="Center"/>

                    <Label Content="プロフィールなど" FontWeight="Bold" FontSize="12" Padding="0"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="80"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label x:Name="editPromptButton" 
                            Content="設定ファイル：" 
                            Height="30"
                            Grid.Column="0"
                            />
                        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1">
                            <TextBlock x:Name="mascotConfigTextBox"></TextBlock>
                        </Border>
                        <Button x:Name="profileEditButton" 
                            Content="エディタ起動" 
                            Height="30"
                            Grid.Column="2"
                            Click="EditPromptButton_Click"
                            />
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="80"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label x:Name="generateProfileFromFileButton" 
                            Content="ファイルからプロフィールを生成：" 
                            Height="30"
                            />
                        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1">
                            <TextBlock x:Name="generateProfileFromFileTextField"
                                       AllowDrop="True"
                                       PreviewDragOver="GenerateProfileFromFileTextField_PreviewDragOver"
                                       Drop="GenerateProfileFromFileTextField_Drop"/>
                        </Border>
                        <Button x:Name="generateProfileFileChooserButton" 
                            Content="生成" 
                            Height="30"
                            Grid.Column="2"
                            Click="GenerateProfileFileChooserButton_Click"
                            />
                        <ComboBox x:Name="generateProfileModelComboBox"
                                  Width="100"
                                  HorizontalAlignment="Left"
                                  DisplayMemberPath="Name"
                                  SelectedIndex="0"
                                  Grid.Column="3"
                                  />
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="460"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <GroupBox x:Name="angleViewGroupBox" Height="360">
                            <GroupBox.Header>
                                <Grid>
                                    <TextBlock Text="図" VerticalAlignment="Center"/>
                                </Grid>
                            </GroupBox.Header>
                            <local:AngleViewControl x:Name="angleViewControl" Height="350" VerticalAlignment="Top"/>
                        </GroupBox>
                        <GroupBox x:Name="profileGroupBox" Grid.Column="1" Height="360" Margin="5,0,0,0">
                            <GroupBox.Header>
                                <Grid>
                                    <TextBlock Text="プロフィール" VerticalAlignment="Center"/>
                                </Grid>
                            </GroupBox.Header>
                            <TextBox
                                x:Name="profileTextBlock"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Disabled"
                                Padding="0" Margin="0"
                                />
                        </GroupBox>
                    </Grid>
                    <StackPanel Orientation="Horizontal">
                        <!-- 背景削除ボタン -->
                        <Button x:Name="removeBackgroundButton" 
                            Content="背景を削除" 
                            Width="100" 
                            Height="30"
                            IsEnabled="False"
                            Click="RemoveBackgroundButton_Click"/>
                        
                        <!-- 背景削除処理コンボボックス -->
                        <Label Content="背景削除AI" FontWeight="Bold" FontSize="10" Padding="0,0,0,0" Margin="10,5,0,2"/>
                        <ComboBox x:Name="backgroundRemovalServiceComboBox"
                                  Width="150"
                                  Height="25"
                                  HorizontalAlignment="Left"
                                  DisplayMemberPath="Name"
                                  SelectedIndex="0"/>
                        <Button x:Name="restoreBackgroundButton" 
                            Content="背景削除前に戻す" 
                            Width="130" 
                            Height="30"
                            IsEnabled="False"
                            Click="RestoreBackgroundButton_Click"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="addImageButton" 
                            Content="画像を追加" 
                            Width="100" 
                            Height="30"
                            Margin="0,0,5,0"
                            Click="AddImageButton_Click"/>
                        <Button x:Name="generateEmotesButton" 
                            Content="表情差分作成" 
                            Width="120" 
                            Height="30"
                            IsEnabled="False"
                            Click="GenerateEmotesButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- フッター：アクションボタン -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Width="210">
            <Button x:Name="saveButton" 
                    Content="保存" 
                    Width="100" 
                    Height="35"
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"/>
            <Button x:Name="cancelButton" 
                    Content="キャンセル" 
                    Width="100" 
                    Height="35"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
