<UserControl x:Class="DesktopAiMascot.views.MascotPropertyPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopAiMascot.views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="480"
             Background="White"
             >
    <GroupBox Header="Mascot" Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListView x:Name="mascotListView" 
                          Grid.Row="0"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          SelectionChanged="MascotListView_SelectionChanged">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" 
                                    BorderThickness="1" 
                                    Margin="2" 
                                    Padding="2"
                                    Width="90" 
                                    Height="90">
                                <Grid>
                                    <Image Source="{Binding CoverImagePath}" 
                                           Stretch="Uniform"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Name}" 
                                               VerticalAlignment="Bottom" 
                                               HorizontalAlignment="Center"
                                               Background="#80FFFFFF"
                                               Padding="2"
                                               FontSize="10"
                                               TextAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button x:Name="addButton" Content="Add" Grid.Row="1" Height="33"/>
            </Grid>

            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <!-- マスコット情報表示 -->
                <GroupBox Header="マスコット情報" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <Label Content="名前" FontWeight="Bold" FontSize="11" Padding="0" Margin="0,0,0,2"/>
                        <TextBlock x:Name="mascotNameLabel" 
                                   Text="未選択" 
                                   FontSize="14"
                                   Margin="0,0,0,10"/>
                        
                        <Label Content="現在設定中の音声" FontWeight="Bold" FontSize="11" Padding="0" Margin="0,0,0,2"/>
                        <TextBlock x:Name="currentVoiceLabel" 
                                   Text="未設定" 
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,10"/>
                        
                        <Label Content="音声スタイル" FontWeight="Bold" FontSize="11" Padding="0" Margin="0,0,0,2"/>
                        <TextBlock x:Name="currentStyleLabel" 
                                   Text="未設定" 
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,0"/>
                    </StackPanel>
                </GroupBox>

                <Button x:Name="editMascot" 
                    Content="Edit" 
                    Height="25"
                    Margin="0,0,0,5"/>
                <Button x:Name="generateEmotes" 
                        Content="Generate Emotes" 
                        Height="25"
                        Margin="0,0,0,5"/>
                <Button x:Name="removeBackGroundButton" 
                        Content="Remove Background" 
                        Height="25"
                        Margin="0,0,0,5"/>
            </StackPanel>
        </Grid>
    </GroupBox>
</UserControl>
