<UserControl x:Class="DesktopAiMascot.views.ApiKeyPropertyPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopAiMascot.views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="480">
    <GroupBox Header="API Key" Padding="10">
        <StackPanel>
            <TextBox x:Name="apiKeyTextBox" 
                     Height="25"
                     Margin="0,0,0,10"
                     AllowDrop="True"
                     Tag="Google API KEY"/>

            <StackPanel Orientation="Horizontal">
                <Button x:Name="saveApiKeyButton" 
                        Content="Save" 
                        Width="75"
                        Height="25"
                        Margin="0,0,10,0"
                        Click="SaveApiKeyButton_Click"/>
                <Button x:Name="clearApiKeyButton" 
                        Content="Clear" 
                        Width="75"
                        Height="25"
                        Click="ClearApiKeyButton_Click"/>
            </StackPanel>
        </StackPanel>
    </GroupBox>
</UserControl>
