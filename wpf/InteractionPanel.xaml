<UserControl x:Class="DesktopAiMascot.Wpf.InteractionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopAiMascot.Wpf"
             xmlns:controls="clr-namespace:DesktopAiMascot.controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300"
             Background="Transparent"
             BorderBrush="#80000000"
             BorderThickness="1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top ToolStrip -->
        <Grid x:Name="topToolStrip"
              Grid.Row="0"
              Height="24"
              Background="#F0F0F0"
              MouseDown="DragMove_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="24"/>
            </Grid.ColumnDefinitions>
            
            <Button x:Name="settingsButton"
                    Grid.Column="0"
                    Content="&#xE713;"
                    FontFamily="Segoe MDL2 Assets"
                    ToolTip="設定"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="16"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"/>
            
            <Button x:Name="clearBtn"
                    Grid.Column="2"
                    Content="&#xE74D;"
                    FontFamily="Segoe MDL2 Assets"
                    ToolTip="メッセージをクリア"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="16"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"/>
        </Grid>

        <!-- Messages Panel -->
        <controls:MessageListPanel
            x:Name="messagesPanel" 
            Grid.Row="1"
            Margin="0"
            Background="#A0FFFFFF"
            />

        <!-- Input Box -->
        <Grid x:Name="inputBox" 
              Grid.Row="2" 
              Background="White"
              Height="24"
              Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="inputTextBox"
                     Grid.Column="0"
                     VerticalAlignment="Stretch"
                     Padding="0"
                     BorderThickness="0"
                     TextWrapping="Wrap"
                     FontFamily="Segoe UI"
                     FontSize="16"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     KeyDown="InputTextBox_KeyDown" TextChanged="inputTextBox_TextChanged"
                     Text=""
                     />

            <Button x:Name="sendButton"
                    Grid.Column="1"
                    Content="&#xE111;"
                    Width="40"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"
                    Background="#0096FF"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="12"
                    Cursor="Hand"
                    Click="SendButton_Click"/>
        </Grid>
    </Grid>
</UserControl>
